{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"types": ["@testing-library/jest-dom"],
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["./src", "./webpack.config.js"]
}
